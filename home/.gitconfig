[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[alias]
    a   = add
    b   = branch
    ba  = branch -a
    bc  = branch --contains
    bm  = branch --merged
    bn  = branch --no-merged
    ch  = cherry-pick
    ci  = commit
    co  = checkout
    ds  = describe
    df  = diff --word-diff
    dc  = diff --word-diff --cached
    dcs = diff --word-diff --cached --stat
    ds  = diff --stat
    fe  = fetch -p -a
    ft  = fetch -t
    i   = remote -v
    l   = log
    lf  = log --follow
    la  = log -p -1 HEAD
    lo  = log -p
    lof = log -p --follow
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    pl  = pull --rebase
    ph  = push
    sh  = show
    sm  = submodule update
    st  = status -sb
[push]
    default = current
[github]
    user = chatgris
[rerere]
    enabled = 1
[user]
    email = jboyer@af83.com
    name = chatgris
[commit]
  template = ~/.git-commit-template
