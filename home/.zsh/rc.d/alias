alias ls='ls -h'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'

alias ..='cd ..'

alias cp='cp --interactive'
alias mv='mv --interactive'
alias rm='rm --interactive'

alias grep="grep --color"
alias rgrep="rgrep --color=auto"

alias df='df --human-readable'
alias du='du --human-readable'

# colordiff
alias diff='colordiff'

alias g="gh"


# default config
alias -g home="xrandr --output LVDS1 --auto --primary --output VGA1 --auto --right-of LVDS1 --rotate left && ~/.xsessionrc && synclient  TapButton1=1"

# Fix tmux weird colors
alias t="tmux -2"

alias be="bundle exec"

alias gmail="mutt -F ~/.muttrc_gmail"

alias serve="ruby -run -e httpd . -p 5000"

# Because I do not like Touchpad, Trackball FTW
alias untouch="synclient TouchpadOff=1"

alias o="open -g"
