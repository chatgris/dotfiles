alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias els='els -h'
alias ell='els -l'
alias ela='els -a'
alias ella='els -la'

alias cp='cp --interactive'
alias mv='mv --interactive'
alias rm='rm --interactive'

alias grep="grep --color"
alias rgrep="rgrep --color=auto"

alias df='df --human-readable'
